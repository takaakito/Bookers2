<h1>User info</h1>

<div>
 <%= image_tag @user.get_profile_image(100,100) %>
 <p>name <%= @user.name %> </p>
 <p>introduction <%= @user.introduction %> </p>
</div>


<h1>New book</h1>
  <%= form_with model: @book do |f| %>
    <h4>Title</h4>
      <%= f.text_field :title %>
    <h4>Opinion</h4>
      <%= f.text_area :opinion %>
    <%= f.submit 'CreateBook' %>
<% end %>

<h1>Books</h1>
<% @books.each do |book| %> 
<div>
   <%= link_to user_path(@user) do %>
   <%= image_tag book.user.get_profile_image(100,100) %>
　 <% end %>
  <%= link_to book_path(book.id) do %>
　<%= book.title %>
　<% end %>
  <p>opinion：<%= book.opinion %></p>. 
</div>
<% end %>