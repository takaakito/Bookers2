<div class="container px-5 px-sm-0">
  <%= render 'error',book: @book%>
  <div class="row">
    <div class="col-md-3">
     <h2>User info</h2>
     <%= image_tag current_user.get_profile_image(50,50) %></p>
     <table class="table">
  <tr><th>name</th> <td><%= current_user.name %></td></tr>
  <tr><th>introduction</th> <td><%= current_user.introduction %></td></tr>
</table>

<div class="row">
   <%= link_to  edit_user_path(current_user), class: "btn btn-outline-secondary btn-block" do %>
     <i class="fas fa-user-cog"></i>
              <% end %>
</div>

 <h2 class="mt-3">New book</h2>
  <%= form_with model: @book do |f| %>
    <h4>Title</h4>
      <%= f.text_field :title %>
    <h4>Opinion</h4>
      <%= f.text_area :opinion %>
    <%= f.submit nil, class: 'btn btn-success' %>
<% end %>
</div>
<div class="col-md-8 offset-md-1">
 <h2>Books</h2>
 <table class='table'>
 <thead>
      <tr>
      <th>Title</th>
      <th>Opinion</th>
      <th colspan="3"></th>
    </tr>
  </thead>
  <tbody>
 <tr>
 <% @books.each do |book| %>
     <td>  <%= link_to user_path(book.user_id) do %>
  　<%= image_tag book.user.get_profile_image(50,50) %>
　  <% end %>
　  </td>
     <td>　<%= link_to book_path(book.id) do %>
           <%= book.title %>
　       <% end %>
　   </td>
　   <td><%= book.opinion %></td>
　  </tr>
<% end %>
  </tbody>
  </table>
     </div>
  </div>
</div>