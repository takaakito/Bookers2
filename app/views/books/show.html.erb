
<% if flash[:notice] %><% end %>
<div class="container px-5 px-sm-0">
  <div class="row">
    <div class="col-md-3">
     <h1>User info</h1>
      <table class="table">
       <tr><th>name</th> <td><%= current_user.name %></td></tr>
       <tr><th>introduction</th> <td><%= current_user.introduction %></td></tr>
      </table>
       <div class="row">
        <%= link_to  edit_user_path(current_user), class: "btn btn-outline-secondary btn-block" do %>
         <i class="fas fa-user-cog"></i>
          <% end %>
       </div>
 <h2 class="mt-3">New book</h2>
  <%= form_with model: Book.new do |f| %>
    <label>Title</label>
      <%= f.text_field :title %>
    <label>Opinion</label>
      <%= f.text_area :opinion %>
    <%= f.submit nil, class: 'btn btn-success' %>
<% end %>
</div>
<div class="col-md-8 offset-md-1">
   <h2>Book detail</h2>
   <table class="table table-hover table-inverse">
   <tbody>
  <tr>
  <td>  <%= link_to user_path(@book.user_id) do %>
         <%= image_tag @book.user.get_profile_image(100,100) %></br>
　         <%= @book.user.name %>
　          <% end %>
 　    </td>
  <td>　<%= link_to book_path(@book.id) do %>
          <%= @book.title %>
　         <% end %>
　</td>
　<td><%= @book.opinion %></td>
　       <% if @book.user == current_user %>
　<td>   <%= link_to 'Edit', edit_book_path(@book.id),class: "btn btn-sm btn-success" %>
　       <% end %></td>
   <td>  <% if @book.user == current_user %>
         <%= link_to 'Destroy', book_path(@book.id), method: :delete, data: {confirm: "削除しますか？"}, class: "btn btn-sm btn-danger" %>
        <% end %></td>
　 </tr>
　</tbody>
</table>
