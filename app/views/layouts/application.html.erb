<!DOCTYPE html>
<html>
  <head>
    <title>Bookers2</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1">
    <%= stylesheet_pack_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

<body>
<header>
<nav class="navbar navbar-expand-lg navbar-dark bg-dark">
  <div class="container">
    <a class="navbar-brand" href="/">Bookers</a>
    <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
      <span class="navbar-toggler-icon"></span>
    </button>
    <div class="collapse navbar-collapse" id="navbarNav">
      <ul class="navbar-nav ml-auto">
        <% if user_signed_in? %>
          <li class="nav-item">
              <%= link_to "Homes", user_path(current_user.id), class: 'nav-link text-light' %>
          </li>
          <li class="nav-item">
              <%= link_to "Users", users_path, class: 'nav-link text-light' %>
          </li>
          <li class="nav-item">
              <%= link_to "Books", books_path, class: 'nav-link text-light' %>
          </li>
          <li class="nav-item">
              <%= link_to "Log out", destroy_user_session_path, method: :delete, class: 'nav-link text-light' %>
          </li>
        
        <% else %>
          <li class="nav-item">
              <%= link_to "Homes", root_path, class: 'nav-link text-light' %>
          </li>
          <li class="nav-item">
              <%= link_to "About", about_path, class: 'nav-link text-light' %>
          </li>
          <li class="nav-item">
              <%= link_to "SignUp", new_user_registration_path, class: 'nav-link text-light' %>
          </li>
          <li class="nav-item">
              <%= link_to "Login", new_user_session_path, class: 'nav-link text-light' %>
          </li>
        </ul>
        <% end %>
   </nav>
</header>
    <%= yield %>
  </body>
  
</html>